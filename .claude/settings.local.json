{
  "permissions": {
    "allow": [
      "Bash(go version:*)",
      "Bash(echo:*)",
      "Bash(osascript:*)",
      "Bash(go mod init:*)",
      "Bash(chmod:*)",
      "Bash(go get:*)",
      "Bash(go build:*)",
      "Bash(./scripts/test_config.sh:*)",
      "Bash(./daily_summary:*)",
      "Bash(./scripts/test_minute_interval.sh:*)",
      "Bash(ls:*)",
      "Bash(launchctl list:*)",
      "Bash(~/.config/daily_summary/config.yaml <<'EOF'\ndata_dir: ~/daily_summary/data\nsummary_dir: ~/daily_summary/summaries\nminute_interval: 5\nsummary_time: \"00:00\"\nclaude_code_path: claude-code\ndialog_timeout: 300\nenable_logging: true\nEOF)",
      "Bash(launchctl unload:*)",
      "Bash(launchctl load:*)",
      "Bash(go test:*)",
      "Bash(grep:*)",
      "Bash(go run:*)",
      "Bash(./scripts/install.sh:*)",
      "Bash(./scripts/uninstall.sh:*)",
      "Bash(kill:*)",
      "Bash(pgrep:*)",
      "Bash(pkill:*)",
      "Bash(python3:*)",
      "Bash(find:*)",
      "Bash(tree:*)"
    ],
    "additionalDirectories": [
      "/tmp",
      "/private/tmp"
    ]
  }
}
